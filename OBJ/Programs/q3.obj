define A = class
  static x = 0
end

define B = class extends A
  static x = 1
  field x

  % Modify so field x is assigned value in the passed x.
  method foo = proc(x) set <this>x = x
end

define C = class extends B
  field x

  method init = proc() { set x = 3 ; this}
end

% Add code to test your solution
define o = .<new C>init()
.<o>foo(10)
<o>x